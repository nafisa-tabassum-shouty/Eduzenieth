@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EduZenith Admin Panel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            background: linear-gradient(10deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1));
            backdrop-filter: blur(20px);
            color:white;
            transition: transform 0.3s ease;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            }

        .card-body {
            
            padding: 20px;
        }

        .list-group-item {
            border: none;
            transition: background-color 0.3s;
            font-size: 16px; /* Initial font size */
            /*background: linear-gradient(10deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1));
            backdrop-filter: blur(5px);*/
            background-color:transparent;
        }

            .list-group-item:hover {
                /*  background-color: #f8f9fa; */ /* Change to a lighter shade */
               
            }

            .list-group-item a {
                color: #0D6EFD; /* Default link color */
                transition: color 0.3s, font-size 0.3s; /* Transition color and font size */
                font-size: 16px; /* Initial font size */
            }

            .list-group-item:hover a {
                color: white; /* Green color on hover */
                font-size: 18px; /* Larger font size on hover */
                text-decoration: none; /* Remove underline on hover */
            }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #6C757D;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        p{
            color:lightgray;
        }
    </style>
</head>
<body style="background-color: #DAE3F3;">

    <div class="container body-content mt-4">
        <div class="row">
            <div class="col-md-8">
                <section class="card shadow-sm">
                    <img src="~/Image/admin1.png" class="card-img-top" alt="Admin Dashboard Image">
                    <div class="card-body">
                        <h2 style="color: white;">Admin Dashboard</h2>
                        <p>Welcome to the EduZenith Admin Panel. From here, you can manage students, courses, view reports, and configure system settings. Use the navigation links to access different sections of the admin panel.</p>
                    </div>
                </section>

                <section class="card shadow-sm mt-4">
                    <img src="~/Image/recent.png" class="card-img-top" alt="Recent Activities Image">
                    <div class="card-body">
                        <h3 style="color: white;">Recent Activities</h3>
                        <p>Keep track of the latest activities and updates on the platform. This section provides an overview of recent actions performed by administrators, students, and instructors.</p>
                        <ul>
                            <li>New student registrations: 15</li>
                            <li>Courses created: 3</li>
                            <li>Enrolled students: 45</li>
                            <li>Support tickets resolved: 10</li>
                        </ul>
                    </div>
                </section>
            </div>

            <div class="col-md-4">
                <aside class="card shadow-sm">
                    <img src="~/Image/clickbellow.png" class="card-img-top" alt="Quick Links Image">
                    <div class="card-body" >
                        <h4 style="color: White;">Quick Links</h4>
                        <ul class="list-group" style="background: linear-gradient(10deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1)); backdrop-filter: blur(20px);">
                            <li class="list-group-item"><a href="@Url.Action("Home", "Admin", new { area = "" })" class="nav-link">Dashboard</a></li>
                            <li class="list-group-item"><a href="@Url.Action("Manage_Students", "Admin", new { area = "" })" class="nav-link">Student Management</a></li>
                            <li class="list-group-item"><a href="@Url.Action("Manage_Courses", "Admin", new { area = "" })" class="nav-link">Course Management</a></li>
                            <li class="list-group-item"><a href="@Url.Action("Manage_Teachers", "Admin", new { area = "" })" class="nav-link">Teacher Management</a></li>
                        </ul>
                    </div>
                </aside>

                <aside class="card shadow-sm mt-4">
                    <img src="~/Image/contuctus.png" class="card-img-top" alt="Contact Support Image">
                    <div class="card-body">
                        <h4 style="color: white;">Contact Support</h4>
                        <p>If you need assistance or have any questions, feel free to reach out to our support team.</p>
                        <p>Email: adminsupport@eduzenith.com</p>
                        <p>Phone: +1 234 567 891</p>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>
