@model IEnumerable<EduzeniethFinal.Models.Student>
@{
    ViewBag.Title = "Student Pending Registrations";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #DAE3F3;
        }

        h2 {
            color: #0D6EFD;
        }

        .table thead {
            background-color: #0D6EFD;
            color: white;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        .btn-primary {
            background-color: #0D6EFD;
            border-color: #0D6EFD;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .card-title {
            color: #0D6EFD;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center font-weight-bold">Student Pending Registrations</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Why Approval is Necessary</h5>
                        <p class="card-text">
                            Approval by the admin ensures that all student registrations are verified and meet our standards. This process helps maintain the integrity and quality of our educational programs.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">How to Approve or Decline</h5>
                        <p class="card-text">
                            In the table below, you can see a list of students who have registered but are pending approval. Use the Accept button to approve a registration or the Decline button to reject it. Approved students will be added to the database.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Nationality</th>
                        <th>Mobile Number</th>
                        <th>Father's Name</th>
                        <th>Religion</th>
                        <th>Address</th>
                        <th>Date of Birth</th>
                        <th>Blood Group</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Username</td>
                            <td>@student.Email</td>
                            <td>@student.Nationality</td>
                            <td>@student.MobileNumber</td>
                            <td>@student.FatherName</td>
                            <td>@student.Religion</td>
                            <td>@student.Address</td>
                            <td>@student.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                            <td>@student.BloodGroup</td>
                            <td>
                                @using (Html.BeginForm("Student_PendingRegistration_Accept", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", student.StudentID)
                                    <button type="submit" class="btn btn-success">Accept</button>
                                }
                                @using (Html.BeginForm("Student_PendingRegistration_Decline", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", student.StudentID)
                                    <button type="submit" class="btn btn-danger">Decline</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
