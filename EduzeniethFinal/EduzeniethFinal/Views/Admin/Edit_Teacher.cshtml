@model IEnumerable<EduzeniethFinal.Models.Teacher>

@{
    ViewBag.Title = "Edit Teacher";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<style>
    body {
        background-color: #DAE3F3;
    }

    h2 {
        color: #0D6EFD;
    }

    .table thead {
        /* background-color: #0D6EFD;*/
        background: linear-gradient(130deg,rgb(19, 14, 75),rgba(7, 11, 48,.2));
        backdrop-filter: blur(4px);
        color: black;
        font-size: larger;
        text-align: center;
    }

    .table tbody tr:nth-child(odd) {
        color: white;
        background: linear-gradient(130deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1));
        backdrop-filter: blur(1px);
        text-align: center;
    }

    .table tbody tr:nth-child(even) {
        color: white;
        background: linear-gradient(130deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1));
        backdrop-filter: blur(20px);
        text-align: center;
    }

    .btn-primary {
        background-color: #0D6EFD;
        border-color: #0D6EFD;
    }

    .btn-success {
        color: black;
        background: linear-gradient(130deg,rgba(75, 13, 13,0.1),rgb(6, 15, 57, 0.10));
        backdrop-filter: blur(20px);
    }

    .btn-danger {
        color: white;
        background: linear-gradient(120deg,rgb(255, 20, 0),rgba(255,255,255,0.1));
        backdrop-filter: blur(20px);
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
<body>
    <h2 style="color:floralwhite;">Manage Teachers</h2>

    <p style="float:right;background-color:darkgreen;">
        @Html.ActionLink("Add New Teacher", "Add_Teacher", "Admin", new { area = "" }, new { @class = "btn btn-primary text-white", style = "background-color: darkgreen;border-radius:5px;border-color:transparent;" })

    </p>
    <br />
    <br />
    <br />
    <div class="table-responsive" style="color:white;border-radius:20px;padding:20px;">
        <table class="table table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Teacher ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Designation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody style="font-size:large;">
                @foreach (var teacher in Model)
                {

                    <tr>
                        <td>@teacher.Id</td>
                        <td>@teacher.first_name</td>
                        <td>@teacher.last_name</td>
                        <td>@teacher.Email</td>
                        <td>@teacher.MobileNumber</td>
                        <td>@teacher.Designation</td>
                        <td>
                            @Html.ActionLink("Edit", "Modify_Teacher", "Admin", new { id = teacher.Id }, new { @class = "btn btn-success btn-lg", style = " color: black;background: linear-gradient(130deg,rgb(10, 255, 0),rgba(255,255,255,0.1)); backdrop-filter: blur(20px);" }) |
                            @Html.ActionLink("Delete Teacher", "Delete_Teacher", "Admin", new { id = teacher.Id }, new { @class = "btn btn-danger btn-lg" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>