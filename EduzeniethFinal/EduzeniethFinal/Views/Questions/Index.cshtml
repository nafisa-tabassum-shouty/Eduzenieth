@model IEnumerable<EduzeniethFinal.Models.Question>
@using EduzeniethFinal.Models
@{
    ViewBag.Title = "Index";
    Layout = null;
    int a = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/8ee0e83968.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #031116;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            transition: margin-left 0.5s ease;
        }

        .header {
            background-color: #0D6EFD;
            color: white;
            padding: 20px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            .header:hover {
                background-color: #0948ba;
            }

        .container {
            margin-top: 30px;
        }

        .card {
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body style="background-color:black;color:white;">
    <section>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color:rgb(92, 38, 146);border-radius: 10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            <div class="container">
                <h3 style="margin-left:-15%;">@Html.ActionLink("EduZenith Student", "Home", "Student", new { area = "" }, new { @class = "navbar-brand" })</h3>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Home", "Home", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Student Details", "Student_Details", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Available Courses", "Available_Courses", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Enrolled Courses", "Enrolled_Courses", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Student", new { area = "" }, new { @class = "nav-link" })</li>

                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <div class="container" style="color:white;background: linear-gradient(10deg,rgba(10, 12, 38,0.10),rgb(47, 13, 91, 0.10)); backdrop-filter: blur(20px);border-radius:20px;">
        <div class="container">
            <div class="pt-5 row" style="background: linear-gradient(10deg,blueviolet,rgb(97, 35, 112, 0.10)); backdrop-filter: blur(20px);border-radius:20px;">
                <div class="col-lg-8 col-xl-6 mx-auto">
                    <h2>Read Question Carefully</h2>
                    <h3>Submit your answer for each question.</h3>
                    <a href="#" class="btn btn-primary fw-light pb-2 ps-3 pe-3 pt-2">Get Started </a><a href="#" class="btn btn-secondary fw-light pb-2 ps-3 pe-3 pt-2">Learn More</a><hr />
                </div>
                <br />
            </div>
        </div>
    </div>
    <hr />
    @using (Html.BeginForm("Index", "Questions", FormMethod.Post))
    {
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="card" style="background-color: #230C38; color:white;">
                    <div class="card-header text-center">
                        <h2>Question Number @a</h2>
                    </div>
                    <div class="form-horizontal card-body">
                        <div class="card-header">
                            <div class="card-group" style="float:right;">
                                @{
                                    a++;
                                    var db = new EduEntities();
                                    var id = item.CourseID;
                                    var CourseName = db.Courses.Find(id);
                                }
                                <p class="text-muted">Course Name : @CourseName.Course_Name</p>
                            </div>
                        </div>
                        <div class="card-group">
                            <h4>Question: @Html.DisplayFor(modelItem => item.Question1)</h4>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                <ol type="a">
                                    <li style="padding:10px;">
                                        @Html.DisplayFor(modelItem => item.Ans_A)
                                        <input type="radio" name="selectedAnswer_@item.QuesID" value="A" />
                                    </li>
                                    <li style="padding:10px;">
                                        @Html.DisplayFor(modelItem => item.Ans_B)
                                        <input type="radio" name="selectedAnswer_@item.QuesID" value="B" />
                                    </li>
                                    <li style="padding:10px;">
                                        @Html.DisplayFor(modelItem => item.Ans_C)
                                        <input type="radio" name="selectedAnswer_@item.QuesID" value="C" />
                                    </li>
                                    <li style="padding:10px;">
                                        @Html.DisplayFor(modelItem => item.Ans_D)
                                        <input type="radio" name="selectedAnswer_@item.QuesID" value="D" />
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-primary">Submit Answers</button>
        </div>
    }







