@model EduzeniethFinal.Models.Question

@{
    ViewBag.Title = "Create";
    Layout = null ;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/8ee0e83968.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #031116;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            transition: margin-left 0.5s ease;
        }

        .header {
            background-color: #0D6EFD;
            color: white;
            padding: 20px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            .header:hover {
                background-color: #0948ba;
            }

        .container {
            margin-top: 30px;
        }

        .card {
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body style="background-color:black;">
    <section>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color:rgb(92, 38, 146); border-radius: 10px;">
            <div class="container">
                <h3 style="margin-left:-15%;">@Html.ActionLink("EduZenith Student", "Home", "Student", new { area = "" }, new { @class = "navbar-brand" })</h3>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            @Html.ActionLink("Home", "Home", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Profile", "Teacher_Details", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("All Courses", "Available_Courses", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Enrolled Courses", "Enrolled_Courses", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Gradebook", "Grade", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>

                        <li>
                            @Html.ActionLink("Course Invitation", "Invite_Courses", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Teacher", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <div class="container" style="color:white;background: linear-gradient(10deg,rgba(10, 12, 38,0.10),rgb(47, 13, 91, 0.10)); backdrop-filter: blur(20px);border-radius:20px;">
        <div class="container">
            <div class="pt-5 row" style="background: linear-gradient(10deg,blueviolet,rgb(97, 35, 112, 0.10)); backdrop-filter: blur(20px);border-radius:20px;">
                <div class="col-lg-8 col-xl-6 mx-auto">
                    <h2>Post a new quiz</h2>
                    <h3>Create the question for new quiz</h3>
                    <a href="#" class="btn btn-primary fw-light pb-2 ps-3 pe-3 pt-2">Get Started </a><a href="#" class="btn btn-secondary fw-light pb-2 ps-3 pe-3 pt-2">Learn More</a><hr />
                </div>
                <br />
            </div>
            </div>
        </div>
            <hr />
            <div class="container">
                <div class="card" style="background-color: #230C38;color:white;">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-header text-center"><h2>Create Question</h2></div>
                        <div class="form-horizontal card-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group card-group">
                                @Html.LabelFor(model => model.Question1, htmlAttributes: new { @class = "control-label ", @style = "color:white;" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Question1, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                    @Html.ValidationMessageFor(model => model.Question1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="card-group list-group-item-dark">
                                <div class="form-group" style="float:left;">
                                    @Html.LabelFor(model => model.Ans_A, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ans_A, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.Ans_A, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="float:left;">
                                    @Html.LabelFor(model => model.Ans_B, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ans_B, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.Ans_B, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="float:left;">
                                    @Html.LabelFor(model => model.Ans_C, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ans_C, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.Ans_C, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="float:left;">
                                    @Html.LabelFor(model => model.Ans_D, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Ans_D, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.Ans_D, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Correct_Ans, htmlAttributes: new { @class = "control-label " })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Correct_Ans, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                    @Html.ValidationMessageFor(model => model.Correct_Ans, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col" style="float:left;">
                                    @Html.LabelFor(model => model.Quiz_id, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Quiz_id, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.Quiz_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col" style="float:left;">
                                    @Html.LabelFor(model => model.CourseID, htmlAttributes: new { @class = "control-label " })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.CourseID, new { htmlAttributes = new { @class = "form-control", @style = "background-color:#4F1A83;color:white;" } })
                                        @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Submit Question" class="btn btn-primary" style="background-color:#4F1A83;" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <div>
                    @Html.ActionLink("show all quiz questions", "Index")
                </div>
            </div>
           
            <!-- Bootstrap JS (optional) -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>