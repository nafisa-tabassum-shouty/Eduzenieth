
@{
    ViewBag.Title = "Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pannel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        ul.navbar-nav li {
            margin-left: 6%;
        }
    </style>
</head>
<body style="background-color: black;">
    <video autoplay loop muted plays-inline class="Background-clip">
        <source src="~/Image/bgreg1.mp4" type="video/mp4" />
    </video>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color:black;margin-top:-.01rem;">

        <div class="container">
            @*<h3>@Html.ActionLink("EduZenith Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</h3>*@
            <h3 style="color:white;">EduZenith Admin</h3>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Dashboard", "Home", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Students
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownLogin">
                            <li>@Html.ActionLink("Add Student", "Add_Student", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Pending Student Registration", "Student_PendingRegistration", "Admin", null, new { @class = "dropdown-item" })</li>
                            <li><hr class="dropdown-divider"></li>
                            <li>@Html.ActionLink("Delete or Update Student", "Manage_Students", "Admin", null, new { @class = "dropdown-item" })</li>
                        </ul>

                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Teachers
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownLogin">
                            <li>
                            <li><a href="@Url.Action("Add_Teacher", "Admin")" class="dropdown-item">Add Teacher</a></li>
                    </li>
                    <li>@Html.ActionLink("Pending Teacher Registration", "TeacherPendingRegistration", "Admin", null, new { @class = "dropdown-item" })</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>@Html.ActionLink("Delete or Update Teacher", "Edit_Teacher", "Admin", null, new { @class = "dropdown-item" })</li>

                </ul>

                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Manage Courses
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownLogin">
                        <li>@Html.ActionLink("Add Course", "AddCourse", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Pending Course Enrollment", "Student_Pending_Enrollment", "Admin", null, new { @class = "dropdown-item" })</li>
                        <li><hr class="dropdown-divider"></li>
                        <li>@Html.ActionLink("Delete or Update Course", "Manage_Courses", "Admin", null, new { @class = "dropdown-item" })</li>
                    </ul>

                </li>


                <li>@Html.ActionLink("Logout", "Logout", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <style>
        .Background-clip {
            position: absolute;
            width: 100%;
            height: fit-content;
            right: 0;
            left: 0;
            bottom: 0;
            z-index: -1;
        }
    </style>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer style="text-align:center;color:white;">
            <p>
                &copy; @DateTime.Now.Year - Rights reserved by EduZenith
                <a href="">Terms </a>
                <a href="">Privacy </a>
                <a href="">Contact Eduzenith Support </a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>
</html>