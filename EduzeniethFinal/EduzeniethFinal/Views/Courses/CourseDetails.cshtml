@{
    Layout = "~/Views/Shared/Student.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/8ee0e83968.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: darkblue;
            font-family: 'Arial', sans-serif;
        }

        .header {
            background-color: #0D6EFD;
            color: white;
            padding: 20px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            .header:hover {
                background-color: #0948ba;
            }

        .container {
            margin-top: 30px;
        }

        .card {
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .form-control {
            margin-bottom: 10px;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #0D6EFD;
                box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
            }

        .section-title {
            margin-top: 30px;
            margin-bottom: 20px;
            text-align: center;
            color: black;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #0D6EFD;
            border-color: #0D6EFD;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0948ba;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .btn-center {
            display: flex;
            justify-content: center;
        }

        .announcement-section {
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        .Background-clip-container {
            position: fixed;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100%, 1fr));
            grid-template-rows: repeat(auto-fill, minmax(100%, 1fr));
        }

        .Background-clip {
            width: 100%;
            height: fit-content;
            object-fit: cover;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #333;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: blueviolet;
                }


        .main-content {
            margin-left: 260px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <section class=" pt-5 text-center" style="color:white;">

        <input type="checkbox" id="check">
        <label for="check">
            <i class="fas fa-bars" id="btn" style="margin-top:3.5%;"></i>
            <i class="fas fa-times" id="cancel" style="margin-left:3.5%;"></i>
        </label>
        <div class="sidebar">



            <section id="teachers">
                <h5 class="section-title text-center" style="color: white; background-color: blueviolet;margin-top:60px;">Enrolled Teachers</h5>

                <div class="row">
                    @foreach (var teacher in ViewBag.EnrolledTeachers)
                    {
                        <div class="col-12">

                            <p class="card-title">@teacher</p>

                        </div>
                    }
                </div>
            </section>

            <div class="fullbody">
                <div class="Background-clip-container">
                    <video autoplay loop muted plays-inline class="Background-clip">
                        <source src="~/Image/bgreg3.mp4" type="video/mp4" />
                    </video>
                    <video autoplay loop muted plays-inline class="Background-clip">
                        <source src="~/Image/bgreg3.mp4" type="video/mp4" />
                    </video>
                    <video autoplay loop muted plays-inline class="Background-clip">
                        <source src="~/Image/bgreg3.mp4" type="video/mp4" />
                    </video>
                </div>



                <div class="sidebar">
                    <section id="students">
                        <h2 class="section-title text-center" style="color:white;">Enrolled Students</h2>
                        <div class="row">
                            @foreach (var student in ViewBag.EnrolledStudents)
                            {
                                <div class="col-12">
                                    <div class="card text-center">
                                        <div class="card-body" style="background-color:blueviolet;">
                                            <h5 class="card-title">@student</h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>

                    <section id="teachers">
                        <h2 class="section-title text-center" style="color:white;">Enrolled Teachers</h2>
                        <div class="row">
                            @foreach (var teacher in ViewBag.EnrolledTeachers)
                            {
                                <div class="col-12">
                                    <div class="card text-center">
                                        <div class="card-body" style="background-color:blueviolet;">
                                            <h5 class="card-title">@teacher</h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>
                </div>

                <div class="main-content">
                    <div class="container">
                        <!-- Announce Something Form -->
                        <section id="announce">
                            <h2 class="section-title" style="color:white;">Announce Something</h2>
                            <div class="row">
                                <div class="col-12">
                                    <form action="/courses/PostAnnouncement" method="post">
                                        <div class="form-group">
                                            <textarea name="announcement" class="form-control" rows="4" placeholder="Write your announcement..." style="background: linear-gradient(10deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1)); backdrop-filter: blur(20px);"></textarea>
                                        </div>
                                        <div class="btn-center">
                                            <button type="submit" class="btn btn-primary">Post Announcement</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </section>

                        <!-- Display Announcements -->
                        <section id="announcements">
                            <h2 class="section-title" style="color:white;">Previous Announcements</h2>
                            @foreach (var announcement in ViewBag.Announcements)
                            {
                                <div class="card announcement-section" style="background: linear-gradient(10deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1)); backdrop-filter: blur(20px);">
                                    <div class="card-body">
                                        <h5 class="card-title" style="color:white;">@announcement.Title</h5>
                                        <p class="card-text" style="color:white;">@announcement.PostedBy : @announcement.Content</p>
                                        <p class="card-text" style="color:white;">
                                            <small class="text-muted">Posted by @announcement.PostedBy on @announcement.PostedDate</small>
                                        </p>
                                    </div>
                                    @if (announcement.Comments != null && announcement.Comments.Count > 0)
                                    {
                                        <ul class="list-group list-group-flush">
                                            @foreach (var comment in announcement.Comments)
                                            {
                                                <li class="list-group-item" style="background-color:blueviolet;color:white;">
                                                    <strong>@comment.CommentedBy:</strong> @comment.CommentContent
                                                </li>
                                            }
                                        </ul>
                                    }
                                    <div class="card-body" style="color:white;">
                                        @using (Html.BeginForm("PostComment", "Courses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            <div class="form-group">
                                                <textarea class="form-control" name="comment" placeholder="Write a comment..." style="width: 100%;"></textarea>
                                            </div>
                                            <input type="hidden" name="postId" value="@announcement.PID" />
                                            <div class="btn-center">
                                                <button type="submit" class="btn btn-primary">Post Comment</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>

            <!-- Bootstrap JS (optional) -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
