@model IEnumerable<EduzeniethFinal.Models.Course>
@{
    ViewBag.Title = "Enrolled_Courses";
    Layout = "~/Views/Shared/Student.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            /*font-family: Arial, Helvetica, sans-serif;*/
        }

        /* Style the header */
        header {
            background-color: #6CADFF;
            padding: 5px;
            text-align: center;
            font-size: 18px;
            color: white;
        }



        article {
            float: left;
            padding: 20px;
            width: 70%;
            background-color: #EDF5FF;
            height: 300px; /* only for demonstration, should be removed */
        }

        /* Clear floats after the columns */
        section::after {
            content: "";
            display: table;
            clear: both;
        }

        /* Style the footer */
        footer {
            background-color: #6CADFF;
            padding: 10px;
            text-align: center;
            color: white;
        }

        media (max-width: 600px) {
            article

        {
            width: 100%;
            height: auto;
        }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div>
                <h2 style="padding:50px;">Enrolled_Courses</h2>
                <hr />


            </div>
            @foreach (var item in Model)
            {
                <div>
                    <div>

                        <header>
                            <h3>Course Name: @Html.DisplayFor(modelItem => item.Course_Name)</h3>
                        </header>

                        <section>
                            <div style="float: left; width: 30%; height: 300px; background: #A0F0FF; padding: 20px; ">

                            </div>

                            <article>
                                <h4>Course Code : @Html.DisplayFor(modelItem => item.Course_Code)</h4>
                                <h5>Course Teacher id or name: @Html.DisplayFor(modelItem => item.teacherID)</h5>
                                <p>Course Description : @Html.DisplayFor(modelItem => item.Course_desc)</p>
                                <p>Course created at: @Html.DisplayFor(modelItem => item.Created_at)</p>
                                @{ViewBag.id = item.Course_Id;
                                    ViewBag.name = item.Course_Name;}
                            </article>
                        </section>

                        <footer>

                            <div class="container" style=" display: flex; justify-content: center; align-items: center; height: 100%;">

                                <div class="form-container" style=" display: flex; justify-content: center; align-items: center; height: 100%;">
                                    <div class="form-container">
                                        @using (Html.BeginForm("Enrolled_Courses", "Student", FormMethod.Post))
                                        {
                                           
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("Course_Id", item.Course_Id)
                                            <input type="submit" value="Enter into The Course" class="btn btn-primary" />
                                        }
                                    </div>
                                </div>

                            </div>

                        </footer>
                        <div style="padding:20px;"></div>

                    </div>
                </div>
            }


</body>
</html>