
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Teacher.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

       
    </style>
</head>
<body>

   
            <!-- Main Content -->
            <main role="main" class="col-md-9  col-lg-10 ">
                <h2>Welcome, @Session["T_username"] </h2>
                <p class="lead">Here are some important updates and articles for you:</p>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                Article 1
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">New Teaching Strategies</h5>
                                <p class="card-text">Explore innovative teaching strategies to enhance student engagement and learning outcomes. <a href="#">Read more...</a></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                Article 2
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Effective Online Teaching</h5>
                                <p class="card-text">Learn best practices for delivering effective online lessons and keeping students engaged in a virtual environment. <a href="#">Read more...</a></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                Article 3
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Assessment Techniques</h5>
                                <p class="card-text">Discover new assessment techniques to accurately measure student learning and progress. <a href="#">Read more...</a></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                Article 4
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Classroom Management</h5>
                                <p class="card-text">Get tips on managing classroom behavior and creating a positive learning environment. <a href="#">Read more...</a></p>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
